<UserControl x:Class="BuildScope.Views.SettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F1EB">

    <UserControl.Resources>
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#6B6B6B" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Margin" Value="0,0,0,6" />
        </Style>
        <Style x:Key="FormInput" TargetType="TextBox">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#1A1A1A" />
            <Setter Property="CaretBrush" Value="#2B4D3F" />
            <Setter Property="FontSize" Value="13.5" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="BorderBrush" Value="#E2DDD6" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10" Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header with back arrow -->
        <Border Grid.Row="0" Padding="16,12" Background="White"
                BorderBrush="#E2DDD6" BorderThickness="0,0,0,1">
            <DockPanel>
                <Button Content="&#x2190;" Click="Back_Click"
                        DockPanel.Dock="Left" Background="Transparent" Foreground="#9B9B9B"
                        FontSize="17" Padding="4,2,10,2" FontFamily="Segoe UI" VerticalAlignment="Center"
                        Cursor="Hand" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent" Padding="{TemplateBinding Padding}">
                                <ContentPresenter />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <TextBlock Text="Settings" Foreground="#1A1A1A" FontSize="15" FontWeight="Bold"
                           VerticalAlignment="Center" FontFamily="Segoe UI" />
            </DockPanel>
        </Border>

        <!-- Settings form -->
        <StackPanel Grid.Row="1" Margin="24,28,24,0" MaxWidth="320">
            <TextBlock Text="Connection" Foreground="#1A1A1A" FontSize="20" FontWeight="Bold"
                       FontFamily="Segoe UI" Margin="0,0,0,6" />
            <TextBlock Text="Configure your Supabase backend."
                       Foreground="#9B9B9B" FontSize="12.5" FontFamily="Segoe UI"
                       Margin="0,0,0,24" />

            <TextBlock Text="SUPABASE URL" Style="{StaticResource FormLabel}" />
            <TextBox x:Name="UrlInput" Style="{StaticResource FormInput}" Margin="0,0,0,20" />

            <TextBlock Text="API KEY" Style="{StaticResource FormLabel}" />
            <TextBox x:Name="KeyInput" Style="{StaticResource FormInput}" Margin="0,0,0,28" />

            <!-- Status message -->
            <TextBlock x:Name="StatusText" Foreground="#4A8F65" FontSize="12"
                       FontFamily="Segoe UI" Margin="0,0,0,14" Visibility="Collapsed" />

            <Button Content="Save Settings" Click="Save_Click"
                    Foreground="White" Padding="18,10" FontSize="13"
                    FontWeight="SemiBold" FontFamily="Segoe UI" Cursor="Hand"
                    BorderThickness="0" HorizontalAlignment="Left">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Bd" CornerRadius="20" Padding="{TemplateBinding Padding}"
                                            Background="#2B4D3F">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#3A6650" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
