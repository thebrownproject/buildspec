<UserControl x:Class="BuildScope.Views.SettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1B1B1F">

    <UserControl.Resources>
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#8E8E96" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
        <Style x:Key="FormInput" TargetType="TextBox">
            <Setter Property="Background" Value="#2A2A30" />
            <Setter Property="Foreground" Value="#EAEAEC" />
            <Setter Property="CaretBrush" Value="#D4944C" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="BorderBrush" Value="#3A3A42" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header with back arrow -->
        <Border Grid.Row="0" Padding="14,9" Background="#232328"
                BorderBrush="#3A3A42" BorderThickness="0,0,0,1">
            <DockPanel>
                <Button Content="&#x2190;" Click="Back_Click"
                        DockPanel.Dock="Left" Background="Transparent" Foreground="#8E8E96"
                        FontSize="16" Padding="4,2,8,2" FontFamily="Segoe UI" VerticalAlignment="Center"
                        Cursor="Hand" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent" Padding="{TemplateBinding Padding}">
                                <ContentPresenter />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <TextBlock Text="Settings" Foreground="#EAEAEC" FontSize="14.5" FontWeight="Bold"
                           VerticalAlignment="Center" FontFamily="Segoe UI" />
            </DockPanel>
        </Border>

        <!-- Settings form -->
        <StackPanel Grid.Row="1" Margin="20,20,20,0" MaxWidth="320">
            <TextBlock Text="Supabase URL" Style="{StaticResource FormLabel}" />
            <TextBox x:Name="UrlInput" Style="{StaticResource FormInput}" Margin="0,0,0,16" />

            <TextBlock Text="API Key" Style="{StaticResource FormLabel}" />
            <TextBox x:Name="KeyInput" Style="{StaticResource FormInput}" Margin="0,0,0,24" />

            <!-- Status message -->
            <TextBlock x:Name="StatusText" Foreground="#5BA67A" FontSize="12"
                       FontFamily="Segoe UI" Margin="0,0,0,12" Visibility="Collapsed" />

            <Button Content="Save" Click="Save_Click"
                    Foreground="#FFFDF8" Padding="16,8" FontSize="13"
                    FontWeight="SemiBold" FontFamily="Segoe UI" Cursor="Hand"
                    BorderThickness="0" HorizontalAlignment="Left">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Bd" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#D4944C" Offset="0" />
                                                <GradientStop Color="#B87A38" Offset="1" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#E0A86A" Offset="0" />
                                                        <GradientStop Color="#D4944C" Offset="1" />
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
