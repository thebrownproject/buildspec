<UserControl x:Class="BuildScope.Views.ProjectForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F1EB">

    <UserControl.Resources>
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#6B6B6B" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Margin" Value="0,0,0,6" />
        </Style>
        <Style x:Key="FormInput" TargetType="TextBox">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#1A1A1A" />
            <Setter Property="CaretBrush" Value="#2B4D3F" />
            <Setter Property="FontSize" Value="13.5" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="BorderBrush" Value="#E2DDD6" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10" Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FormCombo" TargetType="ComboBox">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#1A1A1A" />
            <Setter Property="FontSize" Value="13.5" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="BorderBrush" Value="#E2DDD6" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="16,12" Background="White"
                BorderBrush="#E2DDD6" BorderThickness="0,0,0,1">
            <DockPanel>
                <!-- Back arrow -->
                <Button Content="&#x2190;" Click="Cancel_Click"
                        DockPanel.Dock="Left" Background="Transparent" Foreground="#9B9B9B"
                        FontSize="17" Padding="4,2,10,2" FontFamily="Segoe UI" VerticalAlignment="Center"
                        Cursor="Hand" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent" Padding="{TemplateBinding Padding}">
                                <ContentPresenter />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="24" Height="24" CornerRadius="6" Margin="0,0,10,0" VerticalAlignment="Center"
                            Background="#2B4D3F">
                        <TextBlock Text="B" Foreground="White" FontSize="11" FontWeight="Bold"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI" />
                    </Border>
                    <TextBlock Text="Build" Foreground="#1A1A1A" FontSize="15" FontWeight="Bold"
                               VerticalAlignment="Center" FontFamily="Segoe UI" />
                    <TextBlock Text="Scope" Foreground="#2B4D3F" FontSize="15"
                               VerticalAlignment="Center" FontFamily="Segoe UI" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Form content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24,24">
            <StackPanel MaxWidth="320">
                <!-- Bold heading -->
                <TextBlock Text="New Project" Foreground="#1A1A1A" FontSize="24" FontWeight="Bold"
                           FontFamily="Segoe UI" Margin="0,0,0,6" />
                <TextBlock Text="Define your building context for NCC queries."
                           Foreground="#9B9B9B" FontSize="12.5" FontFamily="Segoe UI"
                           Margin="0,0,0,28" />

                <TextBlock Text="PROJECT NAME" Style="{StaticResource FormLabel}" />
                <TextBox x:Name="NameInput" Style="{StaticResource FormInput}" Margin="0,0,0,20" />

                <TextBlock Text="BUILDING CLASS" Style="{StaticResource FormLabel}" />
                <ComboBox x:Name="ClassDropdown" Style="{StaticResource FormCombo}" Margin="0,0,0,20">
                    <ComboBoxItem Content="1" />
                    <ComboBoxItem Content="1a" />
                    <ComboBoxItem Content="2" />
                    <ComboBoxItem Content="3" />
                    <ComboBoxItem Content="4" />
                    <ComboBoxItem Content="5" />
                    <ComboBoxItem Content="6" />
                    <ComboBoxItem Content="7a" />
                    <ComboBoxItem Content="7b" />
                    <ComboBoxItem Content="8" />
                    <ComboBoxItem Content="9a" />
                    <ComboBoxItem Content="9b" />
                    <ComboBoxItem Content="9c" />
                    <ComboBoxItem Content="10a" />
                    <ComboBoxItem Content="10b" />
                    <ComboBoxItem Content="10c" />
                </ComboBox>

                <TextBlock Text="STATE / TERRITORY" Style="{StaticResource FormLabel}" />
                <ComboBox x:Name="StateDropdown" Style="{StaticResource FormCombo}" Margin="0,0,0,20">
                    <ComboBoxItem Content="NSW" />
                    <ComboBoxItem Content="VIC" />
                    <ComboBoxItem Content="QLD" />
                    <ComboBoxItem Content="SA" />
                    <ComboBoxItem Content="WA" />
                    <ComboBoxItem Content="TAS" />
                    <ComboBoxItem Content="NT" />
                    <ComboBoxItem Content="ACT" />
                </ComboBox>

                <TextBlock Text="CONSTRUCTION TYPE" Style="{StaticResource FormLabel}" />
                <ComboBox x:Name="TypeDropdown" Style="{StaticResource FormCombo}" Margin="0,0,0,28">
                    <ComboBoxItem Content="Type A" />
                    <ComboBoxItem Content="Type B" />
                    <ComboBoxItem Content="Type C" />
                </ComboBox>

                <!-- Error message -->
                <TextBlock x:Name="ErrorText" Foreground="#C75450" FontSize="12"
                           FontFamily="Segoe UI" Margin="0,0,0,14" Visibility="Collapsed" />

                <!-- Buttons: pill style -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel" Click="Cancel_Click"
                            Background="Transparent" Foreground="#6B6B6B"
                            Padding="18,10" Margin="0,0,10,0" FontSize="13" FontFamily="Segoe UI"
                            Cursor="Hand" BorderThickness="1">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="Transparent"
                                                    CornerRadius="20" Padding="{TemplateBinding Padding}"
                                                    BorderBrush="#D0C9C0" BorderThickness="1">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Create Project" Click="Create_Click"
                            Foreground="White" Padding="18,10" FontSize="13"
                            FontWeight="SemiBold" FontFamily="Segoe UI" Cursor="Hand" BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="Bd" CornerRadius="20" Padding="{TemplateBinding Padding}"
                                                    Background="#2B4D3F">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#3A6650" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
